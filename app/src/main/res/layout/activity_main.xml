<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qual a capital do Paraná"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/resposta1"
        android:entries="@array/Cidade"
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Em qual ano terminao a 2 guerra mundial"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/resposta2"
        android:entries="@array/Ano"
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quem ganhou a copa de 98"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/resposta3"
        android:entries="@array/Copa"
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qual é a raça do Goku"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/resposta4"
        android:entries="@array/Raça"
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qual é o nome do buraco negro que esta no centro da nossa galaxia"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/resposta5"
        android:entries="@array/buraco"
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button"
        android:onClick="cliqueAcertos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado" />

    <TextView
        android:id="@+id/textAcerto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acertos: 0/5"
        android:textSize="18sp" />

</LinearLayout>